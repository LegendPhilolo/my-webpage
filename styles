/* Basic reset for padding and margin */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Style the body for a nice background */
body {
    background-color: #e7eff6; /* Light blue background */
    font-family: 'Arial', sans-serif;
    line-height: 1.6;
    padding: 20px;
}

/* Center the form on the page */
form {
    max-width: 500px;
    margin: 30px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

/* Style the form inputs, selects, and buttons */
form input[type="text"],
form input[type="email"],
form input[type="password"],
form select,
form button {
    width: calc(100% - 20px); /* Full width minus padding */
    padding: 10px;
    margin-top: 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

/* Style labels for better readability */
form label {
    display: block;
    margin-top: 20px;
    color: #333;
}

/* Style the submit button more prominently */
form button {
    background-color: #0056b3; /* Dark blue background */
    color: #ffffff; /* White text */
    border: none;
    padding: 12px;
    font-size: 18px;
    cursor: pointer;
}

form button:hover {
    background-color: #003d82; /* A shade darker on hover */
}

/* Style the checkbox and its label */
input[type="checkbox"] {
    margin-top: 0;
}

input[type="checkbox"] + label {
    display: inline-block;
    margin-left: 5px;
    vertical-align: middle;
}

/* Remove default fieldset styling and style the legend */
fieldset {
    border: none;
    padding: 0;
    margin: 0;
}

legend {
    margin-bottom: 10px;
    font-size: 18px;
    color: #333;
}

/* Align radio button labels inline with spacing */
input[type="radio"] {
    margin-top: 0;
    margin-right: 5px;
    vertical-align: middle;
}

input[type="radio"] + label {
    display: inline-block;
    vertical-align: middle;
    margin-right: 20px; /* Adjust space between each radio button */
}

/* Add a hover effect for inputs and buttons for interactivity */
input[type="text"]:hover,
input[type="email"]:hover,
input[type="password"]:hover,
form select:hover,
form button:hover {
    border-color: #0056b3; /* Dark blue border on hover */
}
